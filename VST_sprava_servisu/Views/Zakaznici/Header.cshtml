        <div class="col-lg-2">
            XXX
        </div>
        <div class="col-lg-10">
            @Html.ActionLink(" ", "Details", "Zakaznici", new { id = Model.Id }, new { @class = "btn btn-default btn-sm glyphicon glyphicon-home" })
            @Html.ActionLink(" ", "Create", "Provozy", new { Zakaznik = Model.Id }, new { @class = "btn btn-default btn-sm glyphicon glyphicon-plus" })
            @Html.ActionLink(" ", "ImportSAPAddress", "SAPImport", new { CardCode = Model.KodSAP, Zakaznik = Model.Id }, new { @class = "btn btn-default btn-sm glyphicon glyphicon-import" })

