@model IEnumerable<VST_sprava_servisu.ServisniZasah>

@{
    ViewBag.Title = "List";
}

<div style="background-color:rgba(0, 0, 0, 0.1);border:1px !important;border-style:solid !important; border-color:#fdc800 !important;margin:0px;padding:10px">
    <table class="table table-hover">

        <colgroup>
            <col class="col-lg-3">
            <col class="col-lg-3">

            
        </colgroup>
        <thead>


            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Zakaznik.KodSAP)<br>
                    @Html.DisplayNameFor(model => model.Zakaznik.NazevZakaznika)

                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DatumZasahu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Closed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Projekt)
                </th>





            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Zakaznik.KodSAP)<br>
                    @Html.DisplayFor(modelItem => item.Zakaznik.NazevZakaznika)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatumZasahu)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Closed)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Projekt)

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit","ServisniZasah", new { id = item.Id },null) |
                    @Html.ActionLink("Details", "Details", "ServisniZasah", new { id = item.Id },null) |
                    @Html.ActionLink("Delete", "Delete", "ServisniZasah", new { id = item.Id },null)
                </td>





            </tr>

            }
        </tbody>
    </table>

</div>
