<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Kalendář", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }) </li>
                    <li>@Html.ActionLink("Seznam", "List", "Revize", new { area = "" }, new { @class = "" }) </li>
                    <li>@Html.ActionLink("Bez revize", "Index", "BezRevize", new { area = "" }, new { @class = "" })</li>
                    <li>@Html.ActionLink("Servisní zásahy", "Index", "ServisniZasahy", new { area = "" }, new { @class = "" })</li>
                    <li>@Html.ActionLink("Zákazníci", "Search", "Zakaznici", new { area = "" }, new { @class = "" })</li>
                    <li>@Html.ActionLink("Statistiky", "Index", "Statistiky", new { area = "" }, new { @class = "" })</li>
                    <li>@Html.ActionLink("SIL", "Index", "SIL", new { area = "" }, new { @class = "" })</li>
                    <li>@Html.ActionLink("Nastavení", "Index", "Nastaveni", new { area = "" }, new { @class = "" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
