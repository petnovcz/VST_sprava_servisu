@model IEnumerable<VST_sprava_servisu.Artikl>

@{ 
    int Skupina = int.Parse(string.Format("{0}", ViewData["Skupina"]));
    bool Revize = bool.Parse(string.Format("{0}", ViewData["Revize"]));
    bool TlakovaZk = bool.Parse(string.Format("{0}", ViewData["TlakovaZk"]));
    bool VymenaBaterie = bool.Parse(string.Format("{0}", ViewData["VymenaBaterie"]));
    bool VymenaPyro = bool.Parse(string.Format("{0}", ViewData["VymenaPyro"]));
}


<div class="form-horizontal vstcolor" style="background-color:rgba(0, 0, 0, 0.7);border:2px !important;border-style:solid !important; border-color:#fdc800 !important;margin:0px;padding:10px">
    <center><h4>Artikly</h4></center>
</div>

<div class="form-horizontal" style="background-color:rgba(0, 0, 0, 0.5);border:2px !important;border-style:solid !important; border-color:#fdc800 !important;margin:0px;padding:10px">

    <table class="table">
        <tr class="vstcolor">




            
                <th>
                    @Html.DisplayNameFor(model => model.KodSAP)
                <br>
                    @Html.DisplayNameFor(model => model.Nazev)
                <br>
                    @Html.DisplayNameFor(model => model.SkupinaArtiklu1.Skupina)
                </th>
            


                @if (Revize == true)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.Revize)
                        <br>
                        @Html.DisplayNameFor(model => model.PeriodaRevize)
                    </th>
                }
                @if (TlakovaZk == true)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.TlakovaZk)
                        <br>
                        @Html.DisplayNameFor(model => model.PeriodaTlakovaZk)

                    </th>
                }
                @if (VymenaBaterie == true)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.VymenaBaterie)
                        <br>
                        @Html.DisplayNameFor(model => model.PeriodaBaterie)
                        <br>
                        @Html.DisplayNameFor(model => model.ArtiklBaterieSAP)
                    </th>
                }
                @if (VymenaPyro == true)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.VymenaPyro)<br>
                        @Html.DisplayNameFor(model => model.PeriodaPyro)<br>
                        @Html.DisplayNameFor(model => model.ArtoklPyro)


                    </th>
                }
                @if (Skupina == 131)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.TlakovaNadoba)<br>
                        @Html.DisplayNameFor(model => model.PeriodaRevizeTlakoveNadoby)<br>
                        @Html.DisplayNameFor(model => model.PeriodaVnitrniRevize)<br>
                        @Html.DisplayNameFor(model => model.NejvyssiPracovniPretlak)<br>
                        @Html.DisplayNameFor(model => model.ObjemNadoby)

                    </th>
                }
                @if (Skupina == 129)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.ServisSkupina)
                        <br>
                        @Html.DisplayNameFor(model => model.ServisArtikl)
                    </th>
                }
                <th></th>
            </tr>

        @foreach (var item in Model)
        {
        <tr class="vstcolorwhite">

            
                <td>
                    @Html.DisplayFor(modelItem => item.KodSAP)
                <br>
                    @Html.DisplayFor(modelItem => item.Nazev)
                <br>
                    @Html.DisplayFor(modelItem => item.SkupinaArtiklu1.Skupina)
                </td>
            




                
                @if (Revize == true)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Revize)
                        <br>
                        @Html.DisplayFor(modelItem => item.PeriodaRevize)
                    </td>
                }
                @if (TlakovaZk == true)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.TlakovaZk)<br>
                        @Html.DisplayFor(modelItem => item.PeriodaTlakovaZk)
                    </td>
                }
                @if (VymenaBaterie == true)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.VymenaBaterie)
                        <br>
                        @Html.DisplayFor(modelItem => item.PeriodaBaterie)
                        <br>
                        @Html.DisplayFor(modelItem => item.ArtiklBaterieSAP)
                    </td>
                }
                @if (VymenaPyro == true)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.VymenaPyro)<br>
                        @Html.DisplayFor(modelItem => item.PeriodaPyro)<br>
                        @Html.DisplayFor(modelItem => item.ArtoklPyro)<br>

                    </td>
                }
                @if (Skupina == 131)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.TlakovaNadoba)<br>
                        @Html.DisplayFor(modelItem => item.PeriodaRevizeTlakoveNadoby)<br>
                        @Html.DisplayFor(modelItem => item.PeriodaVnitrniRevize)<br>
                        @Html.DisplayFor(modelItem => item.NejvyssiPracovniPretlak)<br>
                        @Html.DisplayFor(modelItem => item.ObjemNadoby)<br>
                    </td>
                }
                @if (Skupina == 129)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.SkupinaArtiklu2.Skupina)
                        <br>
                        @Html.DisplayFor(modelItem => item.Artikl2.Nazev)
                    </td>
                }
                <td>
                    @Html.ActionLink(" ", "Edit", "Artikly", new { id = item.Id }, new { @class = "btn btn-warning glyphicon glyphicon-edit" })

                    @Html.ActionLink(" ", "Delete", "Artikly", new { id = item.Id }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                </td>
            </tr>
        }

    </table>
</div>