@model IEnumerable<VST_sprava_servisu.Artikl>



 <div class="form-horizontal vstcolor" style="background-color:rgba(0, 0, 0, 0.7);border:2px !important;border-style:solid !important; border-color:#fdc800 !important;margin:0px;padding:10px">
    <center><h4>Artikly</h4></center>
</div>

<div class="form-horizontal" style="background-color:rgba(0, 0, 0, 0.5);border:2px !important;border-style:solid !important; border-color:#fdc800 !important;margin:0px;padding:10px">

    <table class="table">
        <tr class="vstcolor">
            <th>
                @Html.DisplayNameFor(model => model.KodSAP)<br>
                @Html.DisplayNameFor(model => model.Nazev)<br>
                @Html.DisplayNameFor(model => model.SkupinaArtiklu1.Skupina)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Revize)<br>
                @Html.DisplayNameFor(model => model.PeriodaRevize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TlakovaZk)<br>
                @Html.DisplayNameFor(model => model.PeriodaTlakovaZk)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.VymenaBaterie)<br>
                @Html.DisplayNameFor(model => model.PeriodaBaterie)<br>
                @Html.DisplayNameFor(model => model.ArtiklBaterieSAP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VymenaPyro)<br>
                @Html.DisplayNameFor(model => model.PeriodaPyro)<br>
                @Html.DisplayNameFor(model => model.ArtoklPyro)
                

            </th>
            <th>
                @Html.DisplayNameFor(model => model.TlakovaNadoba)<br>
                @Html.DisplayNameFor(model => model.PeriodaRevizeTlakoveNadoby)<br>
                @Html.DisplayNameFor(model => model.PeriodaVnitrniRevize)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="vstcolorwhite">
                <td>
                    @Html.DisplayFor(modelItem => item.KodSAP)<br>
                    @Html.DisplayFor(modelItem => item.Nazev)<br>
                    @Html.DisplayFor(modelItem => item.SkupinaArtiklu1.Skupina)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Revize)<br>
                    @Html.DisplayFor(modelItem => item.PeriodaRevize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TlakovaZk)<br>
                    @Html.DisplayFor(modelItem => item.PeriodaTlakovaZk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VymenaBaterie)<br>
                    @Html.DisplayFor(modelItem => item.PeriodaBaterie)<br>
                    @Html.DisplayFor(modelItem => item.ArtiklBaterieSAP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VymenaPyro)<br>
                    @Html.DisplayFor(modelItem => item.PeriodaPyro)<br>
                    @Html.DisplayFor(modelItem => item.ArtoklPyro)<br>
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TlakovaNadoba)<br>
                    @Html.DisplayFor(modelItem => item.PeriodaRevizeTlakoveNadoby)<br>
                    @Html.DisplayFor(modelItem => item.PeriodaVnitrniRevize)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", "Artikly",new { id = item.Id }, new { @class = "btn btn-warning glyphicon glyphicon-edit" }) 
                   
                    @Html.ActionLink(" ", "Delete", "Artikly", new { id = item.Id }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                </td>
            </tr>
        }

    </table>
    </div>