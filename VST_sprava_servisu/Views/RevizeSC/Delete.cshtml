@model VST_sprava_servisu.RevizeSC

@{
    ViewBag.Title = "Delete";
}
@Html.Action("Header", "Revize", new { Id = Model.Revize.Id, Region = ViewBag.Region })
<div class="col-lg-12 " style="border:2px !important;border-style:solid !important; border-color:#fdc800 !important;margin:0px;padding:10px">
    @Html.Action("Details", "RevizeSC", new { Id = Model.Id })
</div>

<div class="col-lg-12 " style="border:2px !important;border-style:solid !important; border-color:#fdc800 !important;margin:0px;padding:10px">
    <h3>Opravdu chceš smazet tento prvek z revize?</h3>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Smaž" class="btn btn-danger" /> |
            @Html.ActionLink("Zpět na detaily revize", "Details", "Revize", new { Id = Model.RevizeId }, new { @class = "btn btn-default" })
        </div>
    }
</div>
