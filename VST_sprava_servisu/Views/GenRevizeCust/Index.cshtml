@model VST_sprava_servisu.GenRevizeCust
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Send","GenRevizeCust"))
{

    @Html.AntiForgeryToken()

<div class="form-horizontal col-lg-12" style="background-color:rgba(0, 0, 0, 0.5);border:2px !important;border-style:solid !important; border-color:#fdc800 !important;margin:0px;padding:10px">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.Hidden("ZakaznikId", Model.ZakaznikId)
    @Html.Hidden("ProvozId", Model.ProvozId)
    @Html.Hidden("UmisteniId", Model.UmisteniId)
    @Html.Hidden("Rok", Model.Rok)
    @Html.Hidden("Skupina", Model.Skupina)
    @Html.Hidden("Search", Model.Search)


    <div class="form-group ">
        @Html.LabelFor(model => model.Projekt, htmlAttributes: new { @class = "control-label col-md-4 vstcolorwhite" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Projekt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Projekt, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nabidka, htmlAttributes: new { @class = "control-label col-md-4 vstcolorwhite" })
        <div class="col-md-8">
            
                @Html.EditorFor(model => model.Nabidka, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nabidka, "", new { @class = "text-danger" })
            
        </div>
    </div>

    

    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <input type="submit" value="Vytvoř" class="btn btn-success" />
        </div>
    </div>
</div>

}

