        <tr>
            <td>
                @item.ServisniZasah.DatumVznikuPoruchy
            </td>
            <td>
                @item.ServisniZasah.DatumVyzvy
            </td>

            <td>
                @item.ServisniZasah.DatumZasahu
            </td>

            <td>
                @item.ServisniZasah.DatumOdstraneni
            </td>
            <td>
                @item.ServisniZasah.Zakaznik.NazevZakaznika
            </td>
            <td>
                @item.Porucha.NazevPoruchy

            </td>

        </tr>
        }
    </tbody>

</table>

