@model IEnumerable<VST_sprava_servisu.Provoz>

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NazevProvozu)<br>@Html.DisplayNameFor(model => model.AdresaProvozu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OddeleniVybuchu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PotlaceniVybuchu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OdlehceniVybuchu)
                </th>
                <th>
                    
                </th>           
                
               
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NazevProvozu)<br>@Html.DisplayFor(modelItem => item.AdresaProvozu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OddeleniVybuchu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PotlaceniVybuchu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OdlehceniVybuchu)
                    </td>
                    
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                    
                </tr>







            }

        </table>
    </div>
    
</div>

