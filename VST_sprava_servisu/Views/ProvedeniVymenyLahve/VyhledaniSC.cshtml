@model VST_sprava_servisu.ProvedeniVymenyLahve
@{
    ViewBag.Title = "VyhledaniSC";
    Layout = "~/Views/Shared/_Layout_FullW.cshtml";
}

@Html.Action("Header", "Revize", new { Id = Model.Revize.Id, Revize = Model.Revize.Id })

<h2>Vyhledání sériového čísla v SAP</h2>

<p>
    Výměna prvku @Model.RevizeSC.SCProvozu.SerioveCislo.Artikl.Nazev,@Model.RevizeSC.SCProvozu.SerioveCislo.Artikl.KodSAP, @Model.RevizeSC.SCProvozu.SerioveCislo.SerioveCislo1, @Model.RevizeSC.SCProvozu.Znaceni,    @Model.RevizeSC.SCProvozu.Lokace
</p>

@using (Html.BeginForm("VyhledaniSCImport", "ProvedeniVymenyLahve"))
{
    @Html.AntiForgeryToken()

    <div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("RevizeSCId", Model.RevizeSCId)



        @Html.EditorFor(model => model.SC, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SC, "", new { @class = "text-danger" })



        <input type="submit" value="Vyhledej v SAP" class="btn btn-success btn-block" />





    </div>
}