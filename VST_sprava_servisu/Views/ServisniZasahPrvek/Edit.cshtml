@model VST_sprava_servisu.ServisniZasahPrvek

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_FullW.cshtml";
}

@Html.Partial("~/Views/ServisniZasah/Header.cshtml", Model.ServisniZasah)

<hr>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Editace opravy servisního zásahu</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ServisniZasahId)
    @Html.HiddenFor(model => model.SCProvozuID)
    @Html.HiddenFor(model => model.PoruchaID)
    @Html.HiddenFor(model => model.Reklamace)
    @Html.HiddenFor(model => model.PoruseniZarucnichPodminek)
    

    <div class="form-group">
        @Html.LabelFor(model => model.ArtiklID, "ArtiklID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ArtiklID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ArtiklID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Pocet, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Pocet, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Pocet, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Details","ServisniZasah",new { Id = Model.ServisniZasahId},new { @class = "btn btn-warning"})
</div>
